
.container
  = render @calory
  .btn-group
    = link_to "Edit this calorie", edit_calory_path(@calory), class:"btn btn-primary"
    = link_to "Back to calories", calories_path, class:"btn btn-secondary ms-1"
  .btn-group.ms-1
    .btn.btn-warning{"data-bs-target" => "#staticBackdrop", "data-bs-toggle" => "modal", :type => "button"}
      Delete this calorie


#staticBackdrop.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "staticBackdropLabel", "data-bs-backdrop" => "static", "data-bs-keyboard" => "false", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
      .modal-body
        %p Are you sure you want to delete this calorie?
      .modal-footer
        %button.btn.btn-secondary{"data-bs-dismiss" => "modal", :type => "button"} Close
        =link_to "Destroy", @calory, method: :delete, class:"btn btn-danger"